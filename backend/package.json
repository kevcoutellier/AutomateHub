{
	"name": "automatehub-backend",
	"version": "1.0.0",
	"description": "Backend API for AutomateHub - Premium n8n Expertise Marketplace",
	"main": "dist/server.js",
	"scripts": {
		"dev": "nodemon src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"seed": "ts-node src/scripts/seedData.ts",
		"create-admin": "ts-node src/scripts/createAdmin.ts",
		"init-db": "ts-node src/scripts/initializeDatabase.ts",
		"create-indexes": "ts-node -e \"import('./src/config/mongoIndexes').then(m => m.createMongoIndexes())\"",
		"drop-indexes": "ts-node -e \"import('./src/config/mongoIndexes').then(m => m.dropCustomIndexes())\"",
		"analyze-queries": "ts-node -e \"import('./src/config/mongoIndexes').then(m => m.analyzeQueryPerformance())\"",
		"test": "jest",
		"test:unit": "jest tests/unit --coverage --testTimeout=10000",
		"test:integration": "jest tests/integration --testTimeout=30000",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:fix": "jest --detectOpenHandles --forceExit",
		"test:debug": "jest --detectOpenHandles --verbose",
		"test:improve": "node scripts/improve-test-coverage.js",
		"test:all": "ts-node tests/run-all-tests.ts",
		"test:benchmark": "node ../scripts/performance-benchmark.js",
		"test:simple-check": "node ../scripts/simple-performance-check.js",
		"test:finalize": "node ../scripts/finalize-performance.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix"
	},
	"keywords": [
		"n8n",
		"automation",
		"marketplace",
		"api"
	],
	"author": "AutomateHub Team",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.450.0",
		"@aws-sdk/s3-request-presigner": "^3.450.0",
		"@types/socket.io": "^3.0.2",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"express-validator": "^7.0.1",
		"file-type": "^19.0.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.0.3",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"multer-s3": "^3.0.1",
		"nodemailer": "^6.9.7",
		"sharp": "^0.32.6",
		"socket.io": "^4.8.1",
		"stripe": "^14.25.0",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.11",
		"@types/multer-s3": "^3.0.3",
		"@types/node": "^20.10.4",
		"@types/nodemailer": "^6.4.14",
		"@types/sharp": "^0.32.0",
		"@types/stripe": "^8.0.417",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"eslint": "^8.54.0",
		"jest": "^29.7.0",
		"mongodb-memory-server": "^9.1.3",
		"nodemon": "^3.0.2",
		"socket.io-client": "^4.8.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.3"
	}
}
